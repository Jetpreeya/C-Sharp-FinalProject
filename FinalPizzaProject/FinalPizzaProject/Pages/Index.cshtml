@page
@model FinalPizzaProject.Pages.IndexModel

@{
}

<h1>All Order List</h1>

<p>
    <a asp-page="Create">Create New order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaOrder[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaOrder[0].PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaOrder[0].BasePrice)
            </th>
            <th>
                Edit Order
            </th>
             <th>
                Detail Order
            </th>
            <th>
                Delete Order
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PizzaOrder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasePrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                </td>
                 <td>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-success">Details</a> 
                </td>
                 <td>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
